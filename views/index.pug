extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1
        | Project-Portfolio by
        span.about-name  Dominic Meyer

      p.lead
        | On this page you can find my projects that I have programmed myself so far. I concentrate mainly on web development.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href='/project/' + project.id)
            img.thumbnail(src='/static/img/' + project.image_urls + '/thumbnail.png')
            h5= project.project_name
      
