extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= project.project_name

        p.lead
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in project.technologies
            li= tech

        a.link-icon(href= project.live_link, target='_blank')
          i.fas.fa-external-link-alt
        a.link-icon(href= project.github_link, target='_blank')
          i.fab.fa-github

    img.image(src='/static/img/' + project.image_urls + '/image.png')